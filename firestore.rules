rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accessLevel >= 10;
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
      allow write: if isOwner(userId); // Allow users to update their own profile
    }

    // Rules for 'tasks' collection
    match /tasks/{taskId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && (request.auth.uid == resource.data.assignedByUID || request.auth.uid == resource.data.assignedToUID));
    }

    // Rules for 'divisions' collection
    match /divisions/{divisionId} {
      allow read: if true;
      allow write: if isAdmin(); 
    }
    
    // Rules for 'workPrograms' collection
    match /workPrograms/{programId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Rules for 'galleryImages' collection
    match /galleryImages/{imageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Rules for 'fundRequests' collection
    match /fundRequests/{requestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Rules for 'financialReports' collection
    match /financialReports/{reportId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.position.matches('Bendahara.*'));
    }
  }
}
