rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Rules for 'users' collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);
    }

    // Rules for 'tasks' collection
    match /tasks/{taskId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (request.auth.uid == resource.data.assignedByUID || request.auth.uid == resource.data.assignedToUID);
    }

    // Rules for 'divisions' collection
    match /divisions/{divisionId} {
      allow read: if isSignedIn();
      // Allow writes only for admins in the future
      allow write: if false; 
    }

    // Rules for 'fundRequests' collection
    match /fundRequests/{requestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      // Only treasurer or president can approve/reject
      allow update: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accessLevel >= 8;
      allow delete: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.accessLevel >= 10;
    }

    // Rules for 'financialReports' collection
    match /financialReports/{reportId} {
      allow read: if isSignedIn();
      // Only treasurer can add/edit
      allow write: if isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.position.matches('Bendahara.*');
    }
  }
}
